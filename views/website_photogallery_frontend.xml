<?xml version="1.0" ?>
<openerp>
<data>

<!-- Add Photo Gallery page to website -->
<template id="website.photogallery" name="Photo Gallery" page="True" >
    <t t-call="website.layout">
      <div id="wrap">
        <div class="oe_structure" />
       <!-- <t t-foreach="photos" t-as="photo">
           <span t-field="photo.image" t-field-options='{"widget": "image"}'/>
        </t>
	-->
	 <section class="o_gallery s_image_gallery o_spc-big o_grid" data-columns="4" style="overflow: hidden;">
        <div class="container">
	 <div class="row">

	    <t t-foreach="photos" t-as="photo">
		<t t-if="photo_index%4==0">
          		<div class="row" />
		</t>
            <div class="col-md-3">
                <span t-field="photo.image" t-field-options='{"widget":"image"}'  data-index="photo_index" class="img img-responsive" />
            </div>
           </t>

	</div>
          <div class="row"/>
        </div>
      </section>

        </div>
        </t>
</template>


<!-- Add Gallery link to website menu -->
<record id="photogallery_menu" model="website.menu">
        <field name="name">Gallery</field>
        <field name="url">/page/photogallery</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
</record>

</data>
</openerp>

